{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "printWidth": 100,
  "endOfLine": "lf",
  "experimentalSortImports": {
    "groups": [
      "builtin",
      "external",
      ["internal", "subpath"],
      ["parent", "sibling", "index"],
      "unknown"
    ],
    "newlinesBetween": true,
    "order": "asc",
    "ignoreCase": true,
    "internalPattern": ["@/*"]
  },
  "experimentalTailwindcss": {
    "stylesheet": "./src/app/globals.css",
    "functions": ["clsx", "cn", "cva"]
  },
  "ignorePatterns": [".next"]
}
